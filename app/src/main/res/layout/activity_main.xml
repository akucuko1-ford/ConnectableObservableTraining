<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_emitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emitter"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_sub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_sub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber2"
        app:layout_constraintTop_toTopOf="@id/txt_sub1"
        app:layout_constraintStart_toEndOf="@id/txt_sub1"
        app:layout_constraintEnd_toStartOf="@id/txt_sub3"/>

    <TextView
        android:id="@+id/txt_sub3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber3"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/txt_sub1"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/txt_sub4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber4"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/txt_sub1"
        app:layout_constraintStart_toStartOf="@id/txt_sub1"/>

    <TextView
        android:id="@+id/txt_sub5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber5"
        app:layout_constraintTop_toTopOf="@id/txt_sub4"
        app:layout_constraintStart_toEndOf="@id/txt_sub4"
        app:layout_constraintEnd_toStartOf="@id/txt_sub6"/>

    <TextView
        android:id="@+id/txt_sub6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscriber6"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/txt_sub4"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_sub4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        app:layout_constraintTop_toBottomOf="@id/txt_sub4"
        app:layout_constraintStart_toStartOf="@id/txt_sub4"
        app:layout_constraintEnd_toEndOf="@id/txt_sub4"/>

    <Button
        android:id="@+id/btn_sub5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        app:layout_constraintTop_toBottomOf="@id/txt_sub5"
        app:layout_constraintStart_toStartOf="@id/txt_sub5"
        app:layout_constraintEnd_toEndOf="@id/txt_sub5"/>

    <Button
        android:id="@+id/btn_sub6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        app:layout_constraintTop_toBottomOf="@id/txt_sub6"
        app:layout_constraintStart_toStartOf="@id/txt_sub6"
        app:layout_constraintEnd_toEndOf="@id/txt_sub6"/>

</androidx.constraintlayout.widget.ConstraintLayout>